{ 
  "extends": ["stylelint-config-standard"],
  "plugins": ["stylelint-selector-bem-pattern"],
  "rules": {
    "selector-class-pattern": ".",
    "property-no-vendor-prefix": [true, {"ignoreProperties": ["appearance", "user-select"]}],
    "plugin/selector-bem-pattern": {
      "preset": "bem"
    }
  }
}
